<?php
$pageTitle = 'Add Item';
require_once '../includes/header.php';
require_once '../config/database.php';
requireAdmin();

$conn = getDBConnection();
$message = '';

if ($_SERVER['REQUEST_METHOD'] == 'POST') {
    $name = $_POST['name'] ?? '';
    $description = $_POST['description'] ?? '';
    $price = $_POST['price'] ?? 0;
    $category = $_POST['category'] ?? '';
    $is_available = isset($_POST['is_available']) ? 1 : 0;
    
    if (empty($name) || empty($price)) {
        $message = '<div class="alert alert-error">Name and price are required.</div>';
    } else {
        $stmt = $conn->prepare("INSERT INTO items (name, description, price, category, is_available) VALUES (?, ?, ?, ?, ?)");
        $stmt->bind_param("ssdsi", $name, $description, $price, $category, $is_available);
        
        if ($stmt->execute()) {
            header('Location: items.php?success=1');
            exit();
        } else {
            $message = '<div class="alert alert-error">Error adding item.</div>';
        }
        $stmt->close();
    }
}
?>
<div class="form-container">
    <h2>Add New Item</h2>
    <?php echo $message; ?>
    
    <form method="POST" action="">
        <div class="form-group">
            <label for="name">Item Name *</label>
            <input type="text" id="name" name="name" required>
        </div>
        
        <div class="form-group">
            <label for="description">Description</label>
            <textarea id="description" name="description"></textarea>
        </div>
        
        <div class="form-group">
            <label for="category">Category</label>
            <input type="text" id="category" name="category" placeholder="e.g., Coffee, Food, Dessert">
        </div>
        
        <div class="form-group">
            <label for="price">Price (à§³) *</label>
            <input type="number" id="price" name="price" step="0.01" min="0" required>
        </div>
        
        <div class="form-group">
            <label>
                <input type="checkbox" name="is_available" checked> Available
            </label>
        </div>
        
        <button type="submit" class="btn btn-primary">Add Item</button>
        <a href="items.php" class="btn" style="background-color: #95a5a6; color: white;">Cancel</a>
    </form>
</div>

<?php
$conn->close();
require_once '../includes/footer.php';
?>

