<?php
$pageTitle = 'My Orders';
require_once '../includes/header.php';
require_once '../config/database.php';
requireLogin();

$conn = getDBConnection();
$user_id = $_SESSION['user_id'];

if (isset($_GET['success'])) {
    echo '<div class="alert alert-success">Order placed successfully!</div>';
}
if (isset($_GET['cancelled'])) {
    echo '<div class="alert alert-success">Order cancelled successfully!</div>';
}

// Get user orders
$orders = $conn->prepare("
    SELECT * FROM orders 
    WHERE user_id = ? 
    ORDER BY order_date DESC
");
$orders->bind_param("i", $user_id);
$orders->execute();
$orders_result = $orders->get_result();
?>
<div class="card">
    <h2 class="card-title">My Orders</h2>
    
    <div class="table-container">
        <table>
            <thead>
                <tr>
                    <th>Order ID</th>
                    <th>Amount</th>
                    <th>Status</th>
                    <th>Order Date</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <?php if ($orders_result->num_rows > 0): ?>
                    <?php while ($order = $orders_result->fetch_assoc()): ?>
                        <tr>
                            <td>#<?php echo $order['id']; ?></td>
                            <td>à§³<?php echo number_format($order['total_amount'], 2); ?></td>
                            <td>
                                <?php 
                                $statusColors = [
                                    'pending' => '#f39c12',
                                    'preparing' => '#3498db',
                                    'ready' => '#9b59b6',
                                    'completed' => '#27ae60',
                                    'cancelled' => '#e74c3c'
                                ];
                                $statusColor = $statusColors[$order['status']] ?? '#7f8c8d';
                                ?>
                                <span style="padding: 5px 10px; border-radius: 4px; background-color: <?php echo $statusColor; ?>; color: white;"><?php echo ucfirst($order['status']); ?></span>
                            </td>
                            <td><?php echo date('Y-m-d H:i', strtotime($order['order_date'])); ?></td>
                            <td><a href="view_order.php?id=<?php echo $order['id']; ?>" class="btn btn-primary">View Details</a></td>
                        </tr>
                    <?php endwhile; ?>
                <?php else: ?>
                    <tr>
                        <td colspan="5" style="text-align: center;">No orders found. <a href="menu.php">Place your first order!</a></td>
                    </tr>
                <?php endif; ?>
            </tbody>
        </table>
    </div>
</div>

<?php
$conn->close();
require_once '../includes/footer.php';
?>

